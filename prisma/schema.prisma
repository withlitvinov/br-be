generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid()) @db.Uuid
  name     String
  email    String   @unique
  password String
  birthday DateTime @db.Date

  sessions Session[]
  profiles Profile[]
  config   UserConfig @relation(fields: [configId], references: [id])
  configId String     @unique @map("config_id") @db.Uuid

  @@map("users")
}

model UserConfig {
  id       String @id @default(uuid()) @db.Uuid
  timeZone String @map("time_zone")

  user User?

  @@map("user_configs")
}

model Session {
  id           String   @id @default(uuid()) @db.Uuid
  refreshToken String   @map("refresh_token")
  expiresIn    DateTime @map("expires_in") @db.Timestamp()
  createdAt    DateTime @default(now()) @map("created_at") @db.Timestamp()

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id") @db.Uuid

  @@map("sessions")
}

model Profile {
  id             String   @id @default(uuid()) @db.Uuid
  name           String
  birthday       DateTime @db.Date
  birthdayMarker Int      @default(0) @map("birthday_marker")

  user   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id") @db.Uuid

  @@map("profiles")
}

model ScheduledEvent {
  id      String    @id @default(uuid()) @db.Uuid
  key     String
  startAt DateTime  @default(now()) @db.Timestamp()
  endAt   DateTime? @db.Timestamp()

  @@map("scheduled_events")
}
